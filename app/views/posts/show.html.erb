<p id="notice"><%= notice %></p>

<article>
  <header>
    <h2><%= @post.title %></h2>
    <%=raw pubdate(@post.created_at) %>
  </header>
  <%=raw render_content @post %>
  <footer>
    metadata goes here
  </footer>
</article>

<%= link_to t(:edit, :scope => :posts), edit_post_path(@post) %> |
<%= link_to t(:back), posts_path %>
