<% show_comments ||= false %>
<article>
  <header>
    <h2><%= link_to post.title, post %></h2>
    <p><%=t :bryan_mckelvey %></p>
    <p><%= time_tag post.created_at %></p>
    <%= content_tag :p, link_to(t(:edit), edit_post_path(post)) if admin? %>
  </header>
  <%= render_content post %>
  <% if show_comments %>
    <aside>
      <%= content_tag :h3, t("layouts.sidebar.comments"), :id => "comments" %>
      <% if post.comments.empty? %>
        <%= content_tag :p, t(".comments.zero") %>
      <% else %>
        <%= render_comments(post.comments) %>
      <% end %>
    </aside>
    <aside>
      <%= content_tag :h3, t(".reply"), :id => "reply" %>
      <%= render :partial => "comments/form" %>
    </aside>
  <% else %>
    <footer><%= link_to t(".comments", :count => post.comments.count), post_path(post, :anchor => "comments") %></footer>
  <% end %>
</article>
