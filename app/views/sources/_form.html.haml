= form_for(@source) do |f|
  - if @source.errors.any?
    #error_explanation
      %h2 #{pluralize @source.errors.count, "error"} prohibited this source from being saved:
      %ul
        - @source.errors.full_messages.each do |msg|
          %li= msg

  - %w(name url).each do |field|
    .field
      = f.label field
      = f.text_field field
  %hr
  %h4= t ".metrics"
  = f.fields_for :metrics do |builder|
    = render "metrics_fields", f: builder
  .actions.clear
    = f.submit
