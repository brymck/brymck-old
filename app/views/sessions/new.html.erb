<p><%=t :choose, :scope => :sessions %></p>
<ul class="horizontal">
  <% %w{google facebook twitter yahoo}.each do |provider| %>
    <li>
      <%= link_to image_tag("#{provider}_128.png", :size => "128x128"), "/auth/#{provider}" %>
      <%= content_tag :h4, t(".#{provider}"), :class => "center quiet" %>
    </li>
  <% end %>
</ul>
