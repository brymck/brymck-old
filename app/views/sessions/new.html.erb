<p><%=t :choose, :scope => :sessions %></p>
<ul class="horizontal">
  <% %w{google facebook twitter yahoo aol github}.each do |provider| %>
    <li>
      <%= link_to image_tag("#{provider}_128.png"), "/auth/#{provider}" %>
      <%= content_tag :h4, t(provider, :scope => :sessions), :class => "center quiet" %>
    </li>
  <% end %>
</ul>
