<table>
  <tr>
    <% %w{name email content post}.each do |field| %>
      <th><%=t ".#{field}" %></th>
    <% end %>
    <th colspan="3"></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.name %></td>
    <td><%= comment.email %></td>
    <td><%= comment.content %></td>
    <td><%= link_to comment.post.title, comment.post %></td>
    <td><%= link_to t(:show), comment %></td>
    <td><%= link_to t(:edit), edit_comment_path(comment) %></td>
    <td><%= link_to t(:destroy), comment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to t(:new), new_comment_path %>
