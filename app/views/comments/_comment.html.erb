<article class="indent-<%= indent %>">
  <header>
    <%= gravatar_image_tag comment.email, :gravatar => { :alt => comment.name, :default => :identicon, :size => 32 }, :class => "right" %>
    <h4><a name="comment_<%= comment.id %>"><%= link_to_if admin?, comment.name, "mailto:#{comment.email}" %></a></h4>
    <p><%= time_tag comment.created_at %></p>
    <% if admin? %>
      <p>
        <%= link_to t(:edit), edit_comment_path(comment) %> |
        <%= link_to t(:destroy), comment, :confirm => t(:confirm), :method => :delete %>
      </p>
    <% end %>
  </header>
  <%= sanitize render_content(comment) %>
  <footer><%= link_to t(".reply_to_this"), "#reply", :class => "reply", :"data-id" => comment.id %></footer>
</article>
