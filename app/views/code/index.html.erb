  <tr>
    <td><%= code.title %></td>
    <td><%= code.description %></td>
    <td><%= code.url %></td>
    <td><%= link_to t(:show), code %></td>
    <td><%= link_to t(:edit), edit_code_path(code) %></td>
    <td><%= link_to t(:destroy), code, :confirm => t(:confirm), :method => :delete %></td>
  </tr>
<% end %>
</table>

