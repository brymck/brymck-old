#code.span-17.colborder
  = link_to t(:new), new_code_path if admin?
  - last_id = @code.last.id
  - @code.each do |code|
    = render :partial => "code", :locals => { :code => code }
    - unless code.id == last_id
      %hr
- content_for :archive do
  .archive.delink-current{:"data-pjax" => "#code"}
    = render :partial => "archive"
    = content_tag :p, link_to(t(:view_by_language, :scope => :code), languages_path)
