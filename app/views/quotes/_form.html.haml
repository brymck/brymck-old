= form_for(@quote) do |f|
  - if @quote.errors.any?
    #error_explanation
      %h2 #{pluralize @quote.errors.count, "error"} prohibited this quote from being saved:
      %ul
        - @quote.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, class: "span-3"
    = f.text_field :name
  .field
    = f.label :ticker, class: "span-3"
    = f.text_field :ticker
  .field
    - Source.find(:all).each do |source|
      = f.check_box "source_ids", {}, source.id, ""
      = f.label "source_ids", source.name
  .actions.clear
    = f.submit
