= link_to t(:edit), edit_neighborhood_path(@neighborhood)
%h2= @neighborhood.name
= textile @neighborhood.memo
= render partial: "apartments/list", locals: { apartments: @neighborhood.apartments, neighborhood_id: @neighborhood.id  }
%table
  %thead
    %tr
      - %w(year rank value percent).each do |field|
        %th= t(".#{field}")
  %tbody
    - @neighborhood.ratings.each do |rating|
      %tr
        %td= rating.year
        %td= rating.rank
        %td= number_with_delimiter rating.value
        %td= number_to_percentage rating.percent * 100, precision: 1
