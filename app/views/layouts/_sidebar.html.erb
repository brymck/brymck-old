<nav>
  <ul class="horizontal left">
    <%= nav_item t(:home),  home_path  %>
    <%= nav_item t(:about), about_path %>
    <%= nav_item t(:code),  codes_path %>
    <% if admin? %>
      <%= nav_item t(:index, :scope => :posts),    posts_path %>
      <%= nav_item t(:index, :scope => :comments), comments_path %>
      <%= nav_item t(:index, :scope => :users),    users_path %>
    <% end %>
    <% if logged_in? %>
      <%= nav_item t(:signout), signout_path %>
    <% else %>
      <%= nav_item t(:signin), signin_path %>
    <% end %>
  </ul>
  <ul class="horizontal right">
    <%= nav_item t(:english,  :locale => :en), url_for(params.merge(:locale => "en")) %>
    <%= nav_item t(:japanese, :locale => :ja),  url_for(params.merge(:locale => "ja")) %>
  </ul>
</nav>
