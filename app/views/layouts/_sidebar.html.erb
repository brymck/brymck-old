<nav>
  <ul>
    <% NAVIGATION.each do |topic| %>
    <li class="span-3">
      <h3><%= topic["text"] %></h3>
      <ul>
        <% topic["nodes"].each do |subtopic| %>
          <% next if subtopic["logged_out"] && logged_in? %>
          <% next if subtopic["logged_in"] && !logged_in? %>
          <% next if subtopic["admin"] && admin? %>
          <% if current_page?(subtopic["url"]) %>
            <li><strong><%=t subtopic["text"] %></strong></li>
          <% else %>
            <li><%= link_to t(subtopic["text"]), subtopic["url"] %></li>
          <% end %>
        <% end %>
      </ul>
    </li>
    <% end %>
  </ul>
</nav>
<hr>
