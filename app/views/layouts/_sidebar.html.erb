<nav>
  <ul class="left">
    <%= nav_item :home,  root_path  %>
    <%= nav_item :about, about_path %>
    <%= nav_item :blog,  posts_path %>
    <% if admin? %>
      <%= nav_item :members, users_path %>
    <% end %>
    <% if logged_in? %>
      <%= nav_item :signout, signout_path %>
    <% else %>
      <%= nav_item :twitter, "/auth/twitter" %>
    <% end %>
  </ul>
  <ul class="right">
    <% debug request %>
    <% base_uri = request.request_uri.gsub(/^\/[a-z]{2}\//, '/') %>
    <%= nav_item "English", base_uri %>
    <%= nav_item "日本語", "/ja#{base_uri}" %>
  </ul>
</nav>
